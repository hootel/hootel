<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="hotel_calendar.HotelCalendarView">
        <div class="col-xs-12 col-md-12 nopadding">
            <div class="col-lg-1 hidden-xs hidden-sm nopadding" id="pms-menu">
                <div class="col-xs-12 col-md-12 btn" id="pms-search-cal-pag">
                    <div class="col-xs-12 col-md-12 nopadding">
                      <button id="cal-pag-selector" class="btn nopadding" style="min-height:0"><i class="fa fa-2x fa-calendar"></i></button>
                    </div>
                    <div class="col-xs-12 col-md-12 nopadding">
                        <button id="cal-pag-prev-plus" class="btn nopadding" style="min-height:0"><i class="fa fa-2x fa-angle-double-left"></i></button>
                        <button id="cal-pag-prev" class="btn nopadding" style="min-height:0"><i class="fa fa-2x fa-angle-left"></i></button>
                        <button id="cal-pag-next" class="btn nopadding" style="min-height:0"><i class="fa fa-2x fa-angle-right"></i></button>
                        <button id="cal-pag-next-plus" class="btn nopadding" style="min-height:0"><i class="fa fa-2x fa-angle-double-right"></i></button>
                    </div>
                </div>
                <button class="btn btn-default col-xs-12 col-md-12" id="btn_action_checkout">
                    <div class="ninfo"><span class="badge badge-danger">0</span></div>
                    CHECK-OUT
                </button>
                <button class="btn btn-default col-xs-12 col-md-12" id="btn_action_checkin">
                    <div class="ninfo"><span class="badge badge-danger">0</span></div>
                    CHECK-IN
                </button>
                <button class="btn btn-default col-xs-12 col-md-12" id="btn_action_paydue">
                    <div class="ninfo"><span class="badge badge-danger">0</span></div>
                    CHARGES
                </button>
                <button class="btn btn-default col-xs-12 col-md-12" id="btn_action_control">
                    WIZARD
                </button>
                <button class="btn btn-default col-xs-12 col-md-12" id="btn_swap">
                    <div class="ninfo"><span class="badge badge-danger">0</span></div>
                    <span class="ntext">START SWAP</span>
                </button>
                <!--button class="btn btn-default col-xs-12 col-md-12" id="btn_action_refresh">
                    <i class="fa fa-4x fa-refresh"> </i>
                </button-->
            </div>
            <div class="col-xs-12 col-sm-12 col-md-11 nopadding">
                <div class="col-xs-11 col-md-11 nopadding" id="pms-search">
                    <table class="col-xs-12 col-md-12 nopadding" id="pms-search-table">
                        <tbody>
                            <tr>
                                <td class="col-xs-3 col-md-3">
                                    <div class="col-xs-12 col-md-12 nopadding">
                                        <div class="col-xs-3 col-md-3 nopadding text-right filter-title">
                                            <strong>SEGMENTATION:</strong><br/>
                                        </div>
                                        <div class="col-xs-9 col-md-9">
                                            <select class="list form-control" id="type_list" multiple="multiple"/>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-md-12 nopadding">
                                        <div class="col-xs-3 col-md-3 nopadding text-right filter-title">
                                            <strong>LOCATION:</strong><br/>
                                        </div>
                                        <div class="col-xs-9 col-md-9">
                                            <select class="list form-control" id="floor_list" multiple="multiple"/>
                                        </div>
                                    </div>
                                </td>
                                <td class="col-xs-3 col-md-3">
                                    <div class="col-xs-12 col-md-12 nopadding">
                                        <div class="col-xs-3 col-md-3 nopadding text-right filter-title">
                                            <strong>AMENITIES:</strong><br/>
                                        </div>
                                        <div class="col-xs-9 col-md-9">
                                            <select class="list form-control" id="amenities_list" multiple="multiple"/>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-md-12 nopadding">
                                        <div class="col-xs-3 col-md-3 nopadding text-right filter-title">
                                            <strong>VIRTUAL TYPE:</strong><br/>
                                        </div>
                                        <div class="col-xs-9 col-md-9">
                                            <select class="list form-control" id="virtual_list" multiple="multiple"/>
                                        </div>
                                    </div>
                                </td>
                                <td class="col-xs-4 col-md-4">
                                    <!-- div class="col-xs-3 col-md-3">
                                        <select id="reservation_type" name="reservation_type" size="5" multiple="multiple">
                                            <option value="all"> </option>
                                            <option value="reserva">Reserva</option>
                                            <option value="entrada">Entrada</option>
                                            <option value="salida">Salida</option>
                                            <option value="factura">Factura</option>
                                        </select>
                                    </div -->
                                    <div class="col-xs-12 col-md-12">
                                        <table style="margin: 0 auto">
                                            <tbody>
                                                <tr>
                                                    <td>
                                                        FROM<br/>
                                                        <div class="input-group date" id="date_begin">
                                                            <input type="text" class="form-control" name="date_begin" required="required" readonly="1"/>
                                                            <span class="input-group-addon">
                                                                <span class="fa fa-calendar"></span>
                                                            </span>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        TO<br/>
                                                        <div class="input-group date" id="date_end">
                                                            <input type="text" class="form-control" name="date_end" required="required" readonly="1"/>
                                                            <span class="input-group-addon">
                                                                <span class="fa fa-calendar"></span>
                                                            </span>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td colspan="2">
                                                        <div class="input-group col-xs-12 col-md-12">
                                                            <span class="input-group-addon">
                                                                <span class="fa fa-search"></span>
                                                            </span>
                                                            <input type="text" class="form-control" id="search_query" name="search_query" required="required" />
                                                        </div>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div id="hcal_widget" class="col-xs-12 col-md-12 nopadding">
                    <div id="hcal_load">
                        <span>
                            <i class="fa fa-refresh fa-spin fa-5x fa-fw"></i><br/>
                            <h1>Loading Calendar...</h1>
                        </span>
                    </div>
                </div>
                <div style="clear:both;" />
            </div>
        </div>
    </t>

</templates>
