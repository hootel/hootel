<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Hotel Settings -->
    <data>
        <!--  Inherit Company view to add 'door_code' in Reservation Form -->
        <record id="fastcheckin_url_reservation_form" model="ir.ui.view">
            <field name="name">fastcheckin_url.reservation_form</field>
            <field name="model">hotel.reservation</field>
            <field name="inherit_id" ref="hotel.hotel_reservation_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='doorcode']" position="inside">
                    <group>
                        <field name="fc_url"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="inhreit_hotel_reservation_view_form">
            <field name="name">inhreit_hotel.reservation.form</field>
            <field name="model">hotel.reservation</field>
            <field name="inherit_id" ref="hotel.hotel_reservation_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="fast_checkin_view_mail" type="object" string="Send Fast-Checkin Email"
                            attrs="{'invisible': [('checkin_partner_pending_count', '=', 0)]}"/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>
