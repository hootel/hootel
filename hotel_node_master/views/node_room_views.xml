<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- views -->

    <record id="node_room_view_tree" model="ir.ui.view">
        <field name="name">node.room.tree</field>
        <field name="model">node.room</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="backend_id"/>
                <field name="sync_date"/>
                <field name="external_id"/>
            </tree>
        </field>
    </record>

    <!-- actions -->

    <record id="node_room_action" model="ir.actions.act_window">
        <field name="name">List of Rooms</field>
        <field name="res_model">node.room</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="target">main</field>
    </record>

    <!-- menus -->

    <menuitem id="menu_node_room"
              name="Rooms"
              sequence="20"
              parent="menu_node_connector_root"
              action="node_room_action"/>

</odoo>
